mixin logo
    h1: a(href="/"): img(src="/images/logo.png" width="75px" height="75px")

doctype html
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      title
        block title
          = locals.name
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      
      link(href='http://fonts.googleapis.com/css?family=Share:400|Source+Code+Pro:400' rel='stylesheet' type='text/css')
      
      link(rel='stylesheet', href=contents.css['main.css'].url)
  body(class=bodyclass)
    header.header
      div.content-wrap
        block header
          div.logo
            +logo
            h1= locals.name
            p.description= locals.description
            hr
    div#content
      div.content-wrap
        block content

    footer
      div.content-wrap
        block footer
          section.about
            !=contents['about.md'].html
          section.about
            p: a(href="https://twitter.com/ruffrey") Twitter @ruffrey
            p: a(href="https://github.com/ruffrey") Github /ruffrey
            p: a(href="https://www.linkedin.com/in/jeffhparrish") Linkedin /jeffhparrish
            p: a(href="tel:+19167753335") +1-916-775-3335
            p: a(href="mailto:jeffhparrish@gmail.com") Hangouts jeffhparrish
            p: a(href="/resume.html") Resume
          section.copy
            p &copy; #{ new Date().getFullYear() } #{ locals.owner }
              br
              a(href='http://symboliclogic.io') Symbolic Logic
            p 
                a(href='https://github.com/ruffrey/symbolic-logic-site') Source code on this website
                |  is licensed under the&nbsp;
                a(href='/license.html') MIT public license
                | .
